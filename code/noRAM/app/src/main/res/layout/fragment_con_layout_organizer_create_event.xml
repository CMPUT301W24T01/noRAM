<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_color"
                android:minHeight="?attr/actionBarSize"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/event_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:minHeight="?attr/actionBarSize"
                android:text="Create Event - Part 1"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/toolbar" />

            <EditText
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:hint="@string/event_add_p1_name_hint"
                android:minHeight="?attr/actionBarSize"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar" />

            <EditText
                android:id="@+id/event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:hint="@string/event_add_p1_location_hint"
                android:minHeight="?attr/actionBarSize"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_name" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/event_startTime_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:minHeight="?attr/actionBarSize"
                android:text="@string/event_add_p1_startTime_hint"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/event_location" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/event_endTime_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:minHeight="?attr/actionBarSize"
                android:text="@string/event_add_p1_endTime_hint"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/event_startTime_button" />

            <EditText
                android:id="@+id/event_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:ems="10"
                android:hint="@string/event_add_p1_details_hint"
                android:minHeight="?attr/actionBarSize"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/event_endTime_button" />

            <EditText
                android:id="@+id/event_milestones_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:ems="10"
                android:hint="@string/event_add_p1_milestones_hint"
                android:minHeight="?attr/actionBarSize"

                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/event_details" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="30sp"
                android:background="@color/light_grey"

                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_milestones_text"
                app:shapeAppearanceOverlay="@style/rectangle"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="5dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/add_photo_draw_foreground"
                app:backgroundTint="@color/add_photo_draw_background"

                app:layout_constraintBottom_toBottomOf="@+id/image_view"
                app:layout_constraintEnd_toEndOf="@+id/image_view" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/delete_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/delete_photo_draw_foreground"
                app:backgroundTint="@color/delete_photo_draw_background"
                app:layout_constraintEnd_toEndOf="@+id/image_view"
                app:layout_constraintTop_toTopOf="@+id/image_view" />

            <CheckBox
                android:id="@+id/event_trackLocation_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:text="@string/event_add_p1_location_check_text"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view" />

            <Button
                android:id="@+id/event_next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:paddingBottom="100dp"
                android:text="@string/create_event_next_button"
                android:textColor="@color/main_color"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_trackLocation_check" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>